<html lang="en">
  <style>
      .style{
          text-align: center;
      }
  </style>
<%- include('./partials/title.ejs') %> 


<body>
   <div class="container">
       <h1>About our blogs</h1>
       <%- include('./partials/nav.ejs') %> 
       <br><br>
       <hr>

              <div class="style">
                  <h1><%= Details.title %> </h1>
                  <p><%= Details.body %> </p>
                  <a class="delete" data-doc="<%= Details._id %> ">
                    <button type="button" class="btn btn-danger">Danger</button>
                 </a>
              </div>


   </div>

    
<%- include('./partials/footer') %> 

      <script>
          const value = document.querySelector('a.delete');
          value.addEventListener('click', (e)=>{
                const endPoint = `/blogs/${value.dataset.doc}`;
                fetch(endPoint,{
                    method : 'DELETE'
                })
                .then((response)=>response.json())
                .then((data)=>{
                    window.location.href = data.redirect;
                })
                .catch((err)=>{
                    console.log(err);
                })
          });
      </script>
</html>